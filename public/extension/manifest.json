
{
  "manifest_version": 3,
  "name": "TeamsFlow",
  "version": "1.0",
  "description": "Productivity tools for Microsoft Teams Web",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://teams.microsoft.com/*", "http://localhost:*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
