
{
  "entities": {
    "KanbanColumn": {
      "title": "KanbanColumn",
      "description": "Definição de uma coluna no board Kanban.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "color": { "type": "string" },
        "order": { "type": "number" }
      },
      "required": ["id", "name", "color"]
    },
    "KanbanCard": {
      "title": "KanbanCard",
      "description": "Uma tarefa ou resumo de conversa no Kanban.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "columnId": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "priority": { "type": "string", "enum": ["High", "Medium", "Low"] },
        "createdAt": { "type": "number" },
        "userId": { "type": "string" }
      },
      "required": ["columnId", "title", "content", "priority"]
    },
    "QuickResponse": {
      "title": "QuickResponse",
      "description": "Gatilho e texto para resposta rápida no chat.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "trigger": { "type": "string" },
        "text": { "type": "string" },
        "userId": { "type": "string" }
      },
      "required": ["trigger", "text"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}/columns/{columnId}": {
      "schema": "#/entities/KanbanColumn",
      "description": "Colunas personalizadas do usuário."
    },
    "/users/{userId}/cards/{cardId}": {
      "schema": "#/entities/KanbanCard",
      "description": "Cards do board do usuário."
    },
    "/users/{userId}/responses/{responseId}": {
      "schema": "#/entities/QuickResponse",
      "description": "Gatilhos de respostas rápidas do usuário."
    }
  }
}
